<h1>All Posts</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Details</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><a href="/posts/<%= post.id %>">Show Details</a></td>
    </tr>
  <% end %>
</table>
